@model IEnumerable<MatchDto>;
@using Euro2024Stat.Web.Helper;



<div class="row">
    <div class="col-md-12">
        <h3>Upcoming Matches</h3>

        <div class="row">
            @foreach (var match in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <img src="@Url.Content($"~/img/Country/{match.HomeCountryID}/{match.HomeCountryID}.jpg")" alt="@match.HomeCountryID" height="20" width="30" />
                                VS  <img src="@Url.Content($"~/img/Country/{match.AwayCountryID}/{match.AwayCountryID}.jpg")" alt="@match.AwayCountryID" height="20" width="30" />

                            </h5>
                            <p class="card-text">
                                <strong>Stadium:</strong> @match.Stadium<br>
                                <strong>Date:</strong> @match.MatchDatetime<br>
                            </p>
                        </div>
                        @if (User.IsInRole(ApiHelper.RoleAdmin))
                        {
                            <form asp-controller="AdminEntities" asp-action="FinishMatch" method="post">
                                <input type="hidden" name="matchId" value="@match.ID" />
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-square"> Finish Match</i>
                                </button>
                            </form>
                        }

                    </div>
                </div>
            }
        </div>

    </div>
</div>
