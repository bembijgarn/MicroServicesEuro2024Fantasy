@model MatchResultDto

@{
    int homeId = ViewBag.Home;
    int awayId = ViewBag.Away;

    string homeImageUrl = $"~/img/Country/{homeId}/{homeId}.jpg";
    string awayImageUrl = $"~/img/Country/{awayId}/{awayId}.jpg";
}

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Edit Match</h1>
        </div>
        <div class="row text-center">
            <div class="col-6">
                <h3>Home Team</h3>
                <div>
                    <img src="@Url.Content(homeImageUrl)" alt="@homeId" height="20" width="30" />                 
                </div>
            </div>
            <div class="col-6">
                <h3>Away Team</h3>
                <div>
                    <img src="@Url.Content(awayImageUrl)" alt="@awayId" height="20" width="30" />                                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="HomeScore" class="form-control" placeholder="HomeScore..." />
                <span asp-validation-for="HomeScore" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="AwayScore" class="form-control" placeholder="AwayScore..." />
                <span asp-validation-for="AwayScore" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Update</button>
            </div>           
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}