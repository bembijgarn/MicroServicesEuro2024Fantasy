@model IEnumerable<TransactionDto>

@{
    ViewData["Title"] = "Wallet Balance";
}


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }

        .wallet-balance {
            text-align: center;
            margin-bottom: 50px;
        }

            .wallet-balance h2 {
                font-size: 2.5rem;
            }

            .wallet-balance p {
                font-size: 1.25rem;
            }

        .card-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .card {
            width: 300px;
            margin: 20px;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .form-control {
            margin-top: 10px;
        }

        .btn {
            margin-top: 10px;
        }
    </style>

<body>
    <div class="container">
        <div class="wallet-balance">
            <h2>Your Wallet Balance</h2>
            <p>Your current balance is: <strong>@ViewBag.Balance</strong> USD</p>
        </div>
        <div class="card-container">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Deposit</h5>
                    <form asp-controller="Wallet" asp-action="Deposit" method="post">
                        <input type="number" step="0.01" class="form-control" name="amount" placeholder="Enter amount to deposit" required>
                        <button type="submit" class="btn btn-success">Deposit</button>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Withdraw</h5>
                    <form asp-controller="Wallet" asp-action="Withdraw" method="post">
                        <input type="number" step="0.01" class="form-control" name="amount" placeholder="Enter amount to withdraw" required>
                        <button type="submit" class="btn btn-danger">Withdraw</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>UserName</th>
                            <th>TransactionType</th>
                            <th>Amount</th>
                            <th>Datetime</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tran in Model)
                        {
                            <tr>                               
                                <td>@tran.UserName</td>
                                <td>@tran.TransactionType</td>
                                <td>@tran.Amount</td>
                                <td>@tran.TransactionDatetime</td>                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

