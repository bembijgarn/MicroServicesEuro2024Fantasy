@model CountyGroupsViewModel

<style>
    .custom-card-body {
        background-color: aliceblue;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .custom-card-body:hover {
            transform: scale(1.1); 
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); 
        }

    .detail {
        width:100%;
    }
</style>

