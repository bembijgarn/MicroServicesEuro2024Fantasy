                                    <th>Matches</th>
                                    <th>GF</th>
                                    <th>GA</th>
                                    <th>Point</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var country in Model.GroupA)
                                {
                                    <tr>                                       
                                        <td>
                                            <img src="@Url.Content($"~/img/Country/{country.ID}/{country.ID}.jpg")" alt="@country.ID" height="20" width="30" />
                                        </td>
                                        <td>@country.CountryName</td>
                                        <td>@country.Matches</td>
                                        <td>@country.GoalsFor</td>
                                        <td>@country.GoalsAgainst</td>
                                        <td>@country.Point</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-success detail" asp-controller="Match" asp-action="GroupMatches" asp-route-groupId="A">
