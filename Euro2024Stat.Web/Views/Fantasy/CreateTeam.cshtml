@model FantasyTeamDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Create FantasyTeam</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="TeamName" class="form-control" placeholder="TeamName..." />
                <span asp-validation-for="TeamName" class="text-danger" />
            </div>                      
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Create</button>
            </div>
        </div>
    </div>
</form>